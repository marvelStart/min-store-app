.flow-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f5f5f5;
}
.flow-left {
  display: flex;
  flex-direction: column;
  width: 345rpx;
  height: auto;
}
.flow-left view {
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.flow-left view:nth-child(odd) {
  background-color: #ed6a0c;
  height: 400rpx;
}
.flow-left view:nth-child(even) {
  background-color: #ffd01e;
  height: 500rpx;
}
.flow-right {
  display: flex;
  flex-direction: column;
  width: 345rpx;
  height: auto;
}
.flow-right view {
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.flow-right view:nth-child(odd) {
  background-color: #1989fa;
  height: 450rpx;
}
.flow-right view:nth-child(even) {
  background-color: #07c160;
  height: 500rpx;
}
